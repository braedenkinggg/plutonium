{
    "compilerOptions": {
        "target": "es2018",
        "experimentalDecorators": true,
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "typeRoots": ["./node_modules/@types"],
        "skipLibCheck": true,
        "noImplicitAny": true,
    }
}
